{
    "openapi":"3.0.2",
    "info": {
        "title":"Uno Game Documentation",
        "version":"1.0"
    },
    "servers": [
        {"url":"https://api.server.test/v1"}
    ],
    "paths": {
        "/games": {
            "post": {
                "description": "Adds a new game to the system, and returns the ID of the game created.",
                "parameters": [
                    {
                        "name": "playerCount",
                        "in": "query",
                        "required": true,
                        "allowEmptyValue": false,
                        "description": "The number of players who will be joining the game. Game will not start until all are in the game.",
                        "example": 2,
                        "schema": {
                            "type": "number",
                            "minimum": 2,
                            "maximum": 4,
                            "nullable": false
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "description": "Identifier of the created game.",
                                    "example": { "gameId": "abc123" }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "description": "Message describing erraneous fields",
                                    "example": { "playerCount must be a whole number" }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        }
    }
}